@using Newtonsoft.Json
@model AgileDiary.Models.ViewModels.SprintViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>SprintViewModel</h4>
<hr />
<div class="row">
    <form asp-action="Create">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reward" class="control-label"></label>
                <input asp-for="Reward" class="form-control" />
                <span asp-validation-for="Reward" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsActive" class="control-label"></label>
                <input asp-for="IsActive" class="checkbox" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

        @if (Model?.Goals != null)
        {
            <div class="col-md-4">
                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="Goals.First().Area" class="control-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <label asp-for="Goals.First().Description" class="control-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <label asp-for="Goals.First().Reason" class="control-label"></label>
                    </div>
                </div>

                @foreach (var goal in Model.Goals)
                {
                    <div class="row">
                        <div class="col-sm-4">
                            <input asp-for="@goal.Area" class="form-control"/>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="@goal.Description" class="form-control"/>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="@goal.Reason" class="form-control"/>
                        </div>
                    </div>
                }
                <div class="row">
                    <a asp-action="AddGoalWhileCreating">Add goal</a>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-4">
                <a asp-action="AddGoalWhileCreating">Add goal</a>
            </div>
        }
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
