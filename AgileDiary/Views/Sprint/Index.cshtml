@using AgileDiary.Models.AgileDiaryViewModels
@model AllSprintsViewModel

@{
    ViewData["Title"] = "Manage your sprints";
}

<head>
    <environment include="Development">
        <script src="~/js/AgileDiary/Sprint.js" asp-append-version="true"></script>
    </environment>
</head>

<div>
    <table class="table table-hover">
        <thead>
        <tr>
            <td>SprintId</td>
        </tr>
        </thead>

        @foreach (var sprintId in Model.Sprints)
        {
            <tr>
                <td>
                    <input type="checkbox" name="@sprintId" value="false" class="done-checkbox" />
                </td>
                <td><a href="localhost:8081/Sprint/{@sprintId}">@sprintId</a></td>
            </tr>
        }
    </table>

    <div class="panel-footer add-item-form">
            <button type="button" id="add-sprint-button">Add</button>
    </div>
</div>

