@using AgileDiary.Models.AgileDiaryViewModels
@model AllGoalsViewModel

@{
    ViewData["Title"] = "Manage your sprints";
}

<div>
    <table class="table table-hover">
        <thead>
        <tr>
            <td>SprintId</td>
        </tr>
        </thead>

        @foreach (var goalId in Model.Goals)
        {
            <tr>
                <td>
                    <input type="checkbox" name="@goalId" value="false" class="done-checkbox" />
                </td>
                <td><a asp-controller="Goal" asp-action="ConcreteGoal" asp-route-id="@goalId">@goalId</a></td>
            </tr>
        }
    </table>

    <div class="panel-footer add-sprint add-item">
            <button type="button" id="add-sprint-button">Add</button>
    </div>
</div>

